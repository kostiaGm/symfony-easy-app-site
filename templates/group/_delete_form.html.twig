<form method="post" action="{{ path('app_group_delete', {'id': group.id}) }}"
      onsubmit="return confirm('{% trans %} Are you sure you want to delete this item? {% endtrans %}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ group.id) }}">
    <button class="btn">{% trans %} Delete {% endtrans %}</button>
</form>
