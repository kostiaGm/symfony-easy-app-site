{% extends 'base.html.twig' %}

{% block title %}Page{% endblock %}
{% block h1 %}Page{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ page.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ page.createdAt ? page.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ page.updatedAt ? page.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Preview</th>
                <td>{{ page.preview }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ page.body }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ page.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_page_index') }}">back to list</a>

    <a href="{{ path('app_page_edit', {'id': page.id}) }}">edit</a>

    {{ include('page/_delete_form.html.twig') }}
{% endblock %}
