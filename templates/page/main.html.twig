{% extends 'base.html.twig' %}


{% block title %}{{ page.name is defined ? page.name }}{% endblock %}
 {% block h1 %}{{ page.name is defined ?  page.name }}{% endblock %}


{% block body %}

  {% if page.image is defined %}
  {% include 'page/preview.html.twig' with {pages: pages} %}

    <div class="card">
        <img src="{{ app.request.getSchemeAndHttpHost }}/{{ image.load_form_path.big }}/{{ page.image }}"
             class="card-img-top" alt="{{ page.name }}">

        <div class="card-body">
            <p class="card-text">{{ page.body }}</p>

        </div>
    </div>
{% endif %}
{% endblock %}
