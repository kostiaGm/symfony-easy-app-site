{% if app.getUser and constant('App\\Entity\\Role::ROLE_ADMIN') in app.getUser.roles %}
{% set adminMenuActiveRoute = app.request.attributes.get('_route') %}

<div class="card mb-2">
    <div class="card-header">
        <div class="row">
            <h5>Admin Menu</h5>
        </div>

    </div>
    <div class="card-body">
        <div class="list-group list-group-flush">
            {% for r, itm in items %}
                <a class="list-group-item list-group-item-action {{ itm.route|slice(0, 5) in adminMenuActiveRoute ? 'active' }}" href="{{ path(itm.route) }}">{{ itm.title }}</a>
            {% endfor %}

        </div>
    </div>
</div>
{% endif %}
