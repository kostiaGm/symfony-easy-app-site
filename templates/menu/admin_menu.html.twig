{% if app.getUser and constant('App\\Entity\\User::ROLE_ADMIN') in app.getUser.roles %}
{% set adminMenuActiveRoute = app.request.attributes.get('_route') %}
<div class="card mb-2">
    <div class="card-header">
        <div class="row">
            <h5>Admin Menu</h5>
        </div>

    </div>
    <div class="card-body">
        <div>
            <ul class="list-group list-group-flush">
            {% for r, itm in items %}
                {% if itm.route == adminMenuActiveRoute %}
                    <li class="list-group-item active">{{ itm.title }}</li>
                {% else %}
                    <li class="list-group-item"><a href="{{ path(itm.route) }}">{{ itm.title }}</a></li>
                {% endif %}
            {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endif %}
