{% extends 'base.html.twig' %}

{% block title %}Role{% endblock %}
{% block h1 %}Role{% endblock %}

{% block breadcrumb %}
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">{% trans %} Home {% endtrans %} </a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_role_index') }}">
                    {% trans %} Roles {% endtrans %} </a></li>
            <li class="breadcrumb-item active" aria-current="page">
                {% trans %} Role {% endtrans %} {{ role.name }} </li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ role.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ role.name }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ role.role }}</td>
            </tr>
            <tr>
                <th>SiteId</th>
                <td>{{ role.siteId }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('elements/show_page_action_buttons.html.twig', {
        back_to_list_path: path('app_role_index'),
        delete_path: path('app_role_delete', {id: role.id})
    }) }}
{% endblock %}
