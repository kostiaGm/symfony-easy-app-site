{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}
{% block h1 %}User{% endblock %}

{% block breadcrumb %}
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">{% trans %} Home {% endtrans %} </a></li>
            <li class="breadcrumb-item active" aria-current="page">
                {% trans %} User {% endtrans %} {{ user.userIdentifier }} </li>
        </ol>
    </nav>
{% endblock %}


{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>

            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('elements/show_page_action_buttons.html.twig', {
        back_to_list_path: path('app_user_index'),
        delete_path: path('app_user_delete', {id: user.id})
    }) }}
{% endblock %}
